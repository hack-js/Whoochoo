<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5E5E5"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <net.wisedog.android.whooing.widget.WiTextView
        android:id="@+id/account_setting_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textColor="#333333"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/account_setting_item_icon_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/desc_imgbtn_delete"
        android:src="@drawable/icon_delete" />

    <ImageButton
        android:id="@+id/account_setting_item_icon_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/account_setting_item_icon_del"
        android:contentDescription="@string/desc_imgbtn_modify"
        android:src="@drawable/icon_modify" />

</RelativeLayout>