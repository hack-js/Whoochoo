<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/balance_asset_table">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView android:text="항목"
                android:layout_width="0dip"
                android:layout_weight="40"
                android:layout_height="wrap_content"/>
           <TextView android:text="금액"
                android:layout_width="0dip"
               android:layout_height="wrap_content"
               android:layout_weight="60"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

           <TextView
               android:layout_width="0dip"
               android:layout_height="wrap_content"
               android:layout_weight="40"
               android:text="총자산"
               android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:padding="2dip" >

                <View
                    android:layout_width="90dip"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/md__defaultBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="744,444,333" />
            </LinearLayout>
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
           <TextView android:text="ABCD"
                android:layout_width="0dip"
                android:layout_weight="40"
                android:layout_height="wrap_content"/>
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:padding="2dip">

                <View
                    android:layout_width="30dip"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/md__defaultBackground" />

	           <TextView android:text="123456"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
    
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:id="@+id/balance_liabilities_table">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView android:text="항목"
                android:layout_width="0dip"
                android:layout_weight="40"
                android:layout_height="wrap_content"/>
           <TextView android:text="금액"
                android:layout_width="0dip"
               android:layout_height="wrap_content"
               android:layout_weight="60"/>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

           <TextView
               android:layout_width="0dip"
               android:layout_height="wrap_content"
               android:layout_weight="40"
               android:text="총 부채"
               android:textStyle="bold" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:padding="2dip" >

                <View
                    android:layout_width="90dip"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/md__defaultBackground" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="744,444,333" />
            </LinearLayout>
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
           <TextView android:text="ABCD"
                android:layout_width="0dip"
                android:layout_weight="40"
                android:layout_height="wrap_content"/>
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="60"
                android:padding="2dip">

                <View
                    android:layout_width="30dip"
                    android:layout_height="14dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/md__defaultBackground" />

	           <TextView android:text="123456"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>