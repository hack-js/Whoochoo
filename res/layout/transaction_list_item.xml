<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:background="#E5E5E5"
    android:orientation="horizontal"
    android:paddingLeft="10dip"
    android:paddingRight="10dip" >

    <LinearLayout
        android:layout_width="40dip"
        android:layout_height="match_parent" >

        <net.wisedog.android.whooing.widget.WiTextView
            android:id="@+id/transaction_listitem_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical" >

        <net.wisedog.android.whooing.widget.WiTextView
            android:id="@+id/transaction_listitem_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <net.wisedog.android.whooing.widget.WiTextView
                android:id="@+id/transaction_listitem_item"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textSize="16sp" />

            <net.wisedog.android.whooing.widget.WiTextView
                android:id="@+id/transaction_listitem_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:lines="1"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:text=""
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <net.wisedog.android.whooing.widget.WiTextView
                android:id="@+id/transaction_listitem_left"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textSize="16sp" />

            <net.wisedog.android.whooing.widget.WiTextView
                android:id="@+id/transaction_listitem_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dip"
                android:maxLines="1"
                android:text=""
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>