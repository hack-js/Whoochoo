<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5" >

    <RelativeLayout
        android:id="@+id/welcome_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <net.wisedog.android.whooing.widget.WiButton
            android:id="@+id/welcome_button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClickNextBtn"
            android:text="@string/text_next"
            android:textColor="#333333" />

        <net.wisedog.android.whooing.widget.WiTextView
            android:id="@+id/welcome_message_board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="20sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/welcome_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/welcome_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:scaleType="fitXY"
        android:src="@drawable/welcome_img3" />

    <net.wisedog.android.whooing.widget.WiTextView
        android:id="@+id/welcome_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/welcome_msg"
        android:textColor="#333333"
        android:textSize="36sp" />

</RelativeLayout>