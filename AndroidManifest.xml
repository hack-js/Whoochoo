<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.wisedog.android.whooing"
    android:versionCode="80"
    android:versionName="0.8" >

    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="17"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" 
        android:hardwareAccelerated="true" android:allowClearUserData="false">
        <activity
            android:name=".Whooing"
            android:label="@string/app_name" android:theme="@android:style/Theme.Light.NoTitleBar.Fullscreen" 
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.wisedog.android.whooing.auth.WhooingAuthMain"
            android:theme="@android:style/Theme.Black.NoTitleBar" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".auth.WhooingAuthWeb"
            android:theme="@android:style/Theme.Light.NoTitleBar" android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.TransactionAdd"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name=".activity.TransactionEntries"
            android:theme="@android:style/Theme.Light.NoTitleBar" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".activity.MainFragmentActivity"
            android:theme="@style/Theme.VPI" 
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".activity.ExpBudgetFragmentActivity" 
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name=".activity.BillFragmentActivity" 
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name=".activity.PostItFragmentActivity" 
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name=".activity.BbsFragmentActivity" 
            android:screenOrientation="portrait">
        </activity>
        <activity 
            android:name=".activity.UserInfoSetting" 
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />
        <activity android:name=".activity.AccountsSetting" android:screenOrientation="portrait"></activity>
</application>

</manifest>